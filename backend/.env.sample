
# Application Configuration
APP_PORT=8000
ENVIRONMENT=development # development, production, testing

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=contextflow_db
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/contextflow_db" # Used by the app

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_URL="amqp://guest:guest@localhost:5672/" # Used by the app
RABBITMQ_MANAGEMENT_PORT=15672

# Security
SECRET_KEY=your_super_secret_key_here # Change this for production! Used for JWT, etc.
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Add other configuration variables as needed
# LOG_LEVEL=INFO

